= semantic_form_for @page do |form|
  -if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg
  = form.inputs do
    = form.input :title
    = form.input :content
    = form.input :author
    = form.submit 'Save'
